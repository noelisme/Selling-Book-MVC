@model ASM1670.Models.VM.BookVm

@{
    // Layout = "_Layout1";
    var title = Model.Book.Id != 0 ? "Update Book" : "Add Book";
}
<div class="">

        <form method="post" asp-controller="Book" asp-action="CreateUpdate" enctype="multipart/form-data">
        <div class="summary-header" style="text-align: left;">
            <h2>@title </h2>
        </div>
            <div class="p-3 mt-4 ">
                <div class="row">
                <div class="col-10">
                        <input asp-for="Book.Id" hidden />
                        <input asp-for="Book.ImageUrl" hidden />
                        <div class="mb-3 row">
                            <label asp-for="Book.Title"></label>
                            <input asp-for="Book.Title">
                            <span asp-validation-for="Book.Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Book.Description"></label>
                            <input asp-for="Book.Description">
                            <span asp-validation-for="Book.Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Book.Author"></label>
                            <input asp-for="Book.Author">
                            <span asp-validation-for="Book.Author" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Book.Price" ></label>
                            <input type="number" asp-for="Book.Price">
                            <span asp-validation-for="Book.Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="Book.CategoryId"></label>
                            <select asp-for="Book.CategoryId" asp-items="@Model.Categories"></select>
                            <span asp-validation-for="Book.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label>Image</label>
                            <input type="file" name="file" multiple class="form-control" value="@Model.Book.ImageUrl">
                            <span asp-validation-for="Book.ImageUrl" class="text-danger"></span>

                        </div>
                            <button type="submit" class="btn btn-success">Save</button>
                    <a asp-action="Index" class="btn btn-success">Back To List</a>
                    </div>
                <div class="col-2">
                    <img src="@Model.Book.ImageUrl" width="100%" />
                </div>
                </div>
            </div>

        </form>
</div>
